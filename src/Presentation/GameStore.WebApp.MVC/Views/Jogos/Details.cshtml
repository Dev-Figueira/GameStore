@model GameStore.WebApp.MVC.Models.JogoViewModel

@{
    ViewData["Title"] = "Detalhe do Jogo - " + Model.Nome;
}

<h4 style="padding-top: 50px">@ViewData["Title"]</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <dl>
            <dt>
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Genero)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Genero)
            </dd>
        </dl>
        <div>
            <a class="btn btn-dark" asp-controller="Jogos" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
            <a class="btn btn-info" href="javascript:window.history.back();">Voltar</a>
        </div>
    </div>
</div>
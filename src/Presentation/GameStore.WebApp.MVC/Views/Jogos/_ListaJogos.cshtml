@model IEnumerable<GameStore.WebApp.MVC.Models.JogoViewModel>

<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Emprestado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Emprestado)
            </td>
            <td class="text-right">
                <a class="btn btn-warning" asp-controller="Jogos" asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                <a class="btn btn-info" asp-controller="Jogos" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                <a class="btn btn-danger" asp-controller="Jogos" asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
            </td>
        </tr>
        }
    </tbody>
</table>

@model GameStore.WebApp.MVC.Models.EmprestimoViewModel
@{
    ViewData["Title"] = "Atualizar Jogo";
}

<div class="modal-header">
    <h4 class="modal-title">@ViewData["Title"]</h4>
    <button type="button" class="close" data-dismiss="modal">
        <span aria-hidden="true">×</span><span class="sr-only">Fechar</span>
    </button>
</div>

<form asp-action="AtualizarJogo">
    <div class="modal-body">

        <input type="hidden" asp-for="Jogo.Id" />

        <partial name="_Jogo" />

        <div class="modal-footer">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Atualizar Jogo" class="btn btn-success" />
                <input type="button" class="btn btn-info" value="Fechar" data-dismiss="modal" />
            </div>
        </div>

    </div>
</form>
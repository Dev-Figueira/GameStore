@using GameStore.WebApp.MVC.Extensions
@model GameStore.WebApp.MVC.Models.EmprestimoViewModel

@{
    ViewData["Title"] = "Excluir Emprestimo";
}

<h1>@ViewData["Title"]</h1>

<vc:Summary></vc:Summary>

<div>
    <h4>Esta ação será permanente!</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Amigo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Amigo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Jogo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Jogo)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
        <a class="btn btn-info" asp-action="Index">Voltar</a>
    </form>
</div>


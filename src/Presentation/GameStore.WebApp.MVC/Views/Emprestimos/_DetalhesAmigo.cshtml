@model GameStore.WebApp.MVC.Models.EmprestimoViewModel

<div style="padding-top: 20px">
    <div>
        <hr />
        <h4>Amigo</h4>
    </div>

    @if (Model != null)
    {
        <table class="table table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Amigo.Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Amigo.Apelido)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Amigo.Email)
                    </th>
                    <th></th>
                </tr>
            </thead>

            <tr>
                <td>
                    @Html.DisplayFor(model => model.Amigo.Nome)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Amigo.Apelido)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Amigo.Email)
                </td>
                <td>
                    <a asp-action="AtualizarAmigo" asp-route-id="@Model.Id" class="btn btn-info" data-modal="">
                        <span title="Editar">Editar</span>
                    </a>
                </td>
            </tr>
        </table>
    }

</div>

